<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="-138dp"
        android:src="@drawable/gambar1" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/coin" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_marginTop="-64dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="Perfect Life with CONNEY"
        android:textColor="#FF018786"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_1"
        android:layout_marginTop="-2dp"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:padding="30dp"
        android:text="Calculate your Money with CONNEY as your control money. Manage Your Future"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txt_2"
        android:padding="30dp"
        android:id="@+id/ly_1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textSize="16sp"
            android:backgroundTint="@color/background"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:hint="Masukkan Username"
            android:id="@+id/et_username"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textSize="16sp"
            android:backgroundTint="@color/background"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:hint="Masukkan password"
            android:id="@+id/et_password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/ly_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset"
            android:text="Reset"
            android:background="#A2F39B"
            android:layout_marginRight="10dp"/>
        <Button

            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/btn_submit"
            android:text="Submit"
            android:background="#A2F39B"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>